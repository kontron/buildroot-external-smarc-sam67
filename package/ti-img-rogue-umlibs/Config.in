comment "ti-img-rogue-umlibs needs a glibc toolchain w/ threads"
	depends on BR2_aarch64
	depends on !BR2_TOOLCHAIN_USES_GLIBC || !BR2_TOOLCHAIN_HAS_THREADS

config BR2_PACKAGE_TI_IMG_ROGUE_UMLIBS
        bool "ti-img-rogue-umlibs"
        depends on BR2_TOOLCHAIN_HAS_THREADS # libdrm
	# pre-built binaries
	depends on BR2_TOOLCHAIN_USES_GLIBC
	depends on BR2_aarch64
	select BR2_PACKAGE_WAYLAND
	select BR2_PACKAGE_MESA_PVR
	select BR2_PACKAGE_TI_ROGUE_DRIVER if BR2_LINUX_KERNEL

        help
          Graphics libraries for the TI CPUs with Imagination Rogue GPU.

	  https://git.ti.com/cgit/graphics/ti-img-rogue-umlibs
